<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_joyfolder_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/joy_folder_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/joy_button_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/game_folder" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/joy_game_folder"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/partition"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff515864"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>